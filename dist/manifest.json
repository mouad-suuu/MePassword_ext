{
  "manifest_version": 3,
  "name": "MePassword",
  "version": "1.0.0",
  "description": "Password Management Extension",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.clerk.com/*", 
    "https://me-password-web.vercel.app/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.clerk.com/*",
        "https://me-password-web.vercel.app/*"
      ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "./assets/MePassword.png",
      "48": "./assets/MePassword.png",
      "128": "./assets/MePassword.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.html"],
      "matches": [
        "https://*.clerk.com/*",
        "https://me-password-web.vercel.app/*"
      ]
    },
    {
      "resources": ["assets/*"],
      "matches": [
        "https://*.clerk.com/*",
        "https://me-password-web.vercel.app/*"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "oauth2": {
    "client_id": "pk_test_bWVycnktZHJhZ29uLTk0LmNsZXJrLmFjY291bnRzLmRldiQ",
    "scopes": [
      "openid",
      "profile",
      "email"
    ]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; frame-ancestors 'none';"
  },
  "externally_connectable": {
    "matches": [
      "https://*.clerk.com/*",
      "https://me-password-web.vercel.app/*"
    ]
  },
  "icons": {
    "16": "./assets/MePassword.png",
    "48": "./assets/MePassword.png",
    "128": "./assets/MePassword.png"
  }
}
